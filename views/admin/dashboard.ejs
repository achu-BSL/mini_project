<%- include('../include/_header.ejs')%>
<div class="container-fluid p-0 min-vh-100 " style="margin-top: 7%;">
    <%- include('../include/_adminNav.ejs')%> 
        <div class="container f-flex align-items-center justify-content-center">
            <div class="row p-4 gap-3 d-flex justify-content-center">
                <div class="DashBoardUl container col-md-2 p-0 m-0 bg-white d-flex pt-4 sideBar">
                    <ul class="d-flex flex-column">
                        <li class="sideBarlist border p-1 m-2 ps-4 ">
                            <img src="/assets/admin/d1.png" alt="" class="img-fluid me-2">
                            <span><a class="text-decoration-none" style="color: white;"
                                    href="/admin/panel/dashboard">DashBoard</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d3.png" alt="" class="img-fluid me-2">
                            <span><a href="/admin/panel/category" class="text-decoration-none"
                                    style="color: #cdcdcd;">Category</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d2.png" alt="" class="img-fluid me-2">
                            <span></span>
                            <a href="/admin/panel/products" class="text-decoration-none"
                                style="color: #cdcdcd;">Product</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d4.png" alt="" class="img-fluid me-2">
                            <span></span>
                            <a href="/admin/panel/user_management" class="text-decoration-none"
                                style="color: #cdcdcd;">Coustomer</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d5.png" alt="" class="img-fluid me-2">
                            <span></span>
                            <a href="/admin/panel/orders" class="text-decoration-none"
                                style="color: #cdcdcd;">Order</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d6.png" alt="" class="img-fluid me-2">
                            <span></span>
                            <a href="/admin/panel/coupons" class="text-decoration-none"
                                style="color: #cdcdcd;">Coupons</a></span>
                        </li>
                        <li class="dashOther fw-bold p-1 ps-4 m-2">
                            <img src="/assets/admin/d6.png" alt="" class="img-fluid me-2">
                            <span></span>
                            <a id="logout" class="text-decoration-none"
                                style="color: #cdcdcd;">Logout</a></span>
                        </li>
                    </ul>
                </div>
                <div class=" container col-md-9  p-0 m-0">
                    <div class="container p-0 ">
                        <div class="conatiner saleTop bg-white mb-3">
                            <div class="container summary p-3 d-flex gap-3">
                                <h6 class="mt-3 ps-4">Sales Summary</h6>
                            </div>
                            <div class="row p-4">
                                <div id="three"
                                    class="container SaleBox-one d-flex flex-column align-items-center justify-content-center col-md-3 p-3">
                                    <img src="/assets/admin/DsC3.png" alt="" class="img-fluid mb-3">
                                    <h2><%= productsCount %></h2>
                                    <h6>Product Count</h6>
                                </div>
                                <div id="four"
                                    class="container SaleBox-one d-flex flex-column align-items-center justify-content-center col-md-3 p-3">
                                    <img src="/assets/admin/DsC4.png" alt="" class="img-fluid mb-3">
                                    <h2><%= usersCount %></h2>
                                    <h6>Total User</h6>
                                </div>
                            </div>
                        </div>
                        <div class="conatiner graphSummary bg-white pt-3">
                            <div class="d-flex justify-content-end container">
                                <a class="btn btn-outline-dark" href="dashboard/salesreport">Sales Report</a>
                            </div>
                            <div class="container graph">
                                <div>
                                    <select name="based_on" id="based_on">
                                        <option value="week">Week</option>
                                        <option value="month">Month</option>
                                        <option value="year">Year</option>
                                    </select>
                                    <canvas id="myChart"></canvas>
                                </div>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script> 
<script type="module" src="/js/admin/dashboard.mjs"></script>
<%- include('../include/_adminFooter.ejs')%>