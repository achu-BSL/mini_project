<%- include('../include/_header.ejs')%>
    <div class="container-fluid p-0 min-vh-100 " style="margin-top: 7%;">
        <%- include('../include/_adminNav.ejs')%>
            <div class="container f-flex align-items-center justify-content-center">
                <div class="row p-4 gap-3 d-flex justify-content-center">
                    <div class="DashBoardUl container col-md-2 p-0 m-0 bg-white d-flex pt-4 sideBar">
                        <ul class="d-flex flex-column">
                            <li class="sideBarlist border p-1 m-2 ps-4 ">
                                <img src="/assets/admin/d1.png" alt="" class="img-fluid me-2">
                                <span><a class="text-decoration-none" style="color: white;"
                                        href="/admin/panel/dashboard">DashBoard</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d3.png" alt="" class="img-fluid me-2">
                                <span><a href="/admin/panel/category" class="text-decoration-none"
                                        style="color: #cdcdcd;">Category</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d2.png" alt="" class="img-fluid me-2">
                                <span></span>
                                <a href="/admin/panel/products" class="text-decoration-none"
                                    style="color: #cdcdcd;">Product</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d4.png" alt="" class="img-fluid me-2">
                                <span></span>
                                <a href="/admin/panel/user_management" class="text-decoration-none"
                                    style="color: #cdcdcd;">Coustomer</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d5.png" alt="" class="img-fluid me-2">
                                <span></span>
                                <a href="/admin/panel/orders" class="text-decoration-none"
                                    style="color: #cdcdcd;">Order</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d6.png" alt="" class="img-fluid me-2">
                                <span></span>
                                <a href="/admin/panel/coupons" class="text-decoration-none"
                                    style="color: #cdcdcd;">Coupons</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2">
                                <img src="/assets/admin/d6.png" alt="" class="img-fluid me-2">
                                <span></span>
                                <a id="logout" class="text-decoration-none" style="color: #cdcdcd;">Logout</a></span>
                            </li>
                        </ul>
                    </div>
                    <div class=" container col-md-9  p-0 m-0">
                        <div class="container p-0 ">
                            <div class="conatiner graphSummary bg-white">
                                <div class="container summary p-3 d-flex gap-3">
                                    <h6 class="mt-3 ps-4">Sales Report</h6>
                                    <div>
                                        <select name="based_on" id="based_on">
                                            <option value="week">Week</option>
                                            <option selected value="month">Month</option>
                                            <option value="year">Year</option>
                                            <option value="day">Day</option>
                                        </select>
                                    </div>
                                    <div id="select_container">
                                        <div class="year_container">
                                            <label for="year_input">Year</label>
                                            <input disabled type="text" value="2023" id="year_input">
                                            <select name="year_selector" id="year_selector"></select>
                                        </div>
                                        <div class="month_container">
                                            <label for="month_input">Month</label>
                                            <input disabled type="text" value="1" id="month_input">
                                            <select name="month_selector" id="month_selector">
                                                <option value="1">Jan</option>
                                                <option value="2">Feb</option>
                                                <option value="3">Mar</option>
                                                <option value="4">Apr</option>
                                                <option value="5">May</option>
                                                <option value="6">Jun</option>
                                                <option value="7">Jul</option>
                                                <option value="8">Aug</option>
                                                <option value="9">Sep</option>
                                                <option value="10">Oct</option>
                                                <option value="11">Nov</option>
                                                <option value="12">Des</option>
                                            </select>
                                        </div>
                                        <div class="week_container">
                                            <label for="week_input">Week</label>
                                            <input disabled type="text" value="1" id="week_input">
                                            <select name="week_selector" id="week_selector"></select>
                                        </div>
                                        <div class="day_container d-none">
                                            <label for="day_input">Day</label>
                                            <input disabled type="text" value="1" id="day_input">
                                            <select name="day_selector" id="day_selector"></select>
                                        </div>
                                    </div>
                                    <div>
                                        <button id="get_btn" class="btn btn-outline-danger">GET SALES REPORT</button>
                                    </div>
                                </div>
                                <div class="container mt-4">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#Id</th>
                                                <th>Product Name</th>
                                                <th>Quantity</th>
                                                <th>User</th>
                                                <th>Order At</th>
                                                <th>Total Price</th>
                                                <th>Pending Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <div class="p-4">
                                    <a id="download-btn" class="btn btn-danger" href="/admin/salesreport/download">Download</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>

    <template id="order-row">
        <tr>
            <td class="order_id"></td>
            <td class="product_name"></td>
            <td class="quantity"></td>
            <td class="user"></td>
            <td class="order_date"></td>
            <td class="total_price"></td>
            <td class="pending_payment"></td>
        </tr>
    </template>

    <template id="noData">
        <div class="d-flex justify-content-center align-items-center mx-auto p-2 mt-3">
            <div class="mx-2  bg-white d-flex flex-column align-items-center justify-content-center p-2 px-4 py-4"
            style="border-radius: 14px; box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);">
            <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_3VDN1k.json" background="transparent"
            speed="5" style="width: 300px; height: 300px; opacity: 80%;" loop autoplay></lottie-player>
            <div class="d-flex flex-column align-items-center justify-content-center " style="color: #9e9e9e;">
                <h5>No Data</h5>
            </div>
        </div>
    </div>
    </template>

    <script src="/js/admin/ts/dist/sales_report.js"></script>
    <%- include('../include/_adminFooter.ejs')%>