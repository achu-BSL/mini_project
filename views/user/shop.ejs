<%- include("../include/_header.ejs")%>
    <div class="container-fluid p-0 min-vh-100" style="margin-top: 8%;">
        <%- include("../include/navbar.ejs")%>
            <!-- CAROUSEL -->
            <div id="carouselExampleControlsNoTouching" class="carousel slide container-fluid mt-2"
                data-bs-touch="false" data-bs-interval="false">
                <div class="carousel-inner">
                    <div class="imageOne carousel-item active d-flex align-items-center">
                        <img src="/public/banners/banner1.jpg" class=" CarouselImage d-block p-2 " alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/public/banners/banner2.jpg" class="CarouselImage d-block p-2 " alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/public/banners/banner3.jpg" class="CarouselImage d-block p-2" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="container">
                <!-- line -->
                <div class="container">
                    <hr class="line bg-dark">
                </div>
                <!-- content -->
                <div class="row p-3 d-flex justify-content-between">
                    <!-- Filter Part -->
                    <div
                        class="col-lg-2 col-md-2 p-3 mt-2 container SideFilter bg-white d-flex flex-column align-items-center" style="max-height: 100vh; overflow-y: auto;">
                        <div class="filterBox d-flex justify-content-between p-3">
                            <span style="font-weight: 550;">FILTER</span>
                            <span style="font-weight: 550;">
                                <a style="text-decoration: none;" href="">
                                    Clear Filter
                                </a>
                            </span>
                        </div>
                        <!-- category  -->
                        <div class="container filterCo p-4">
                            <span style="font-weight: 550;">CATEGORIES</span>
                            <div class="px-2 pt-2 filterFont">
                                <%category.forEach((cate)=>{%>
                                    <div class="category-container">
                                        <h6><%= cate.category_name %></h6>
                                    </div>
                                    <div class="sub-category d-flex flex-column d-none" style="max-height: 150px; overflow-y: auto;">
                                        <% cate.subCategories.forEach((sub)=>{%>
                                            <label for=""><%= sub.subcategory_name %></label>
                                            <input value="<%= sub.subcategory_name %>" type="checkbox" name="<%= sub.subcategory_name %>" class="sub-check">
                                        <%})%>
                                    </div>
                                <%})%>
                            </div>
                        </div>
                        <!--Rate Range -->
                        <!-- line -->
                        <div class="container">
                            <hr class="line bg-dark">
                        </div>
                        <!-- Sorting -->
                        <div class="container filterCo px-4">
                            <span style="font-weight: 550;">Sort by</span>
                            <div class="px-2 pt-2 filterFont">
                                <select id="sortSelect" style="width: 100%; height: 40px;font-size: 13.5px;">
                                    <option value="all">All</option>
                                    <option value="latest">Latest Arrival</option>
                                    <option value="highToLow">Higher To Lower</option>
                                    <option value="lowToHigh">Lower To Higher</option>
                                </select>
                            </div>
                        </div>
                        <!-- line -->
                        <div class="container">
                            <hr class="line bg-dark">
                        </div>
                        <!-- Rating -->
                        <div class="container filterCo px-4">
                            <span style="font-weight: 550;">PRICE SORTING</span>
                            <div class="px-2 filterFont">
                                <div class="">
                                    <input type="checkbox">
                                    <label for="">4 Star Above</label>
                                </div>
                                <div class="">
                                    <input type="checkbox">
                                    <label for="">3 Start Above</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" col-lg-9 col-md-9 container p-0 m-0 d-flex flex-column align-items-start justify-content-start">
                        <div id="product-container" class="row d-flex align-items-center justify-content-start">
                        </div>
                        <div id="no-data-container" class="d-flex justify-content-center align-items-center mx-auto"></div>
                        <!-- Page Nation -->
                        <div id="pagination-container"
                            class="d-flex align-items-center justify-content-center w-100 mt-5 gap-2">
                            
                        </div>
                    </div>
                </div>
            </div>
    </div>

<script type="module" src="/js/user/shop.mjs"></script>
    <%- include("../include/_footer.ejs")%>