<%- include('../include/_header') -%>
<div class="container-fluid p-0 justify-content-center align-items-center signUp min-vh-100" style="margin-top: 6%;">
    <%- include('../include/navbar') -%>
         <div class="container d-flex justify-content-center align-items-center">
            <div class="row rounded-5 p-3 CardSignup">
               <div class="left p-3 d-flex flex-column justify-content-center">
                  <div class="heading">
                     <h2>Hi, What's up.</h2>
                     <span>Login with OTP</span><br>
                     <div class="text text-success fw-bold mt-3" style="font-size: 15px;">
                     </div>
                  </div>
                  <form id="form"  class="w-100" method="post">
                     <div class="signUpForm d-flex gap-3 mt-4 flex-column loginButton">
                        <div class="row">
                            <div class="input-control col-md-8 my-2">
                                <input class="signInput" type="text" placeholder="email" name="email" id="email" required>
                                   <span id="err-display" class="text text-danger err"></span>
                            </div>
                            <div class="col-md-2">
                                <button class="btn col-md-4" disabled type="button" id="send-otp">send OTP</button>
                            </div>
                        </div>
                        <div class="input-control">
                            <input class="signInput" type="number" name="otp" id="otp" placeholder="OTP">
                            <p class="err"></p>
                        </div>
                        <!-- BUTTON -->
                        <div class="d-flex flex-column mt-2 gap-2 align-items-center ">
                           <button id="login-btn" class="btn text-white " type="submit">Login</button>
                           <button type="button" class="btn bg-white border text-dark col-lg-6"><a class="text-decoration-none text-dark" href="/api/register" >Don't have account? Register Now.</a></button>
                           <button type="button" class="btn bg-white border text-dark col-lg-6"><a class="text-decoration-none text-dark" href="/api/login" >Remember Password? Login with Password.</a></button>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
      <script src="/js/user/dist/loginWithOTP.js"></script>
   <%- include('../include/_footer') -%>